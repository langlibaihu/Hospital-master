      </if>
      <if test="name != null and name != '' ">
        and hname like '%${name}%'
      </if>
    </where>
    <choose>
      <when test="insurance != null and times != null">
        <if test="insurance == 1">
          order by times desc,insurance desc
        </if>
        <if test="insurance == 0">
          order by times desc,insurance
        </if>
      </when>
      <when test="times == null and insurance != null">
